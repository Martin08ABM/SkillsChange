---
  // Importar la configuración de Tailwind
  import '../styles/global.css';

  // Poder cambiar el título de la página dependiendo en que pantalla se encuentre
  const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{ title }</title>
    <!-- Etiquetas SEO -->
    <meta name="description" content="Plataforma de intercambio de servicios mediante trueques o pagos. Encuentra y ofrece servicios de bricolaje, estética, diseño e informática.">
    <meta name="keywords" content="intercambio servicios, trueque servicios, pago servicios, bricolaje, estética, diseño, informática, SkillsChange">
    <meta name="robots" content="index, follow">
    <meta name="author" content="SkillsChange">
    <meta property="og:title" content="{ title }">
    <meta property="og:description" content="Plataforma de intercambio de servicios mediante trueques o pagos">
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
    <!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
	</head>
	<body class="h-full flex flex-col">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
</style>
